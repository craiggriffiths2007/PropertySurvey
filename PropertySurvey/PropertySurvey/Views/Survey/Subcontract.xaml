             xmlns:controls="clr-namespace:MartControls"
             Title="Subcontractor"
             x:Class="PropertySurvey.Subcontract">
    <ContentPage.Content>
        <controls:ControlLayout x:Name="page1">

            <controls:YesNoLabel x:Name="testyesno" button_binding="b_subcontract" OnSelectionChanged="OnButton"  LabelText="Subcontractor required?"></controls:YesNoLabel>

            <controls:EditorGrows x:Name="subcon_text" Text="{Binding subcontracttext}" IsVisible="False"/>
            
            <controls:Copyright/>
        </controls:ControlLayout>
        
    </ContentPage.Content>
</ContentPage>