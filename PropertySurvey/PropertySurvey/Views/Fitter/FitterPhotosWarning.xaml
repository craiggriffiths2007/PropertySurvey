<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PropertySurvey.FitterPhotosWarning"
             xmlns:controls="clr-namespace:MartControls"
             Title="Photos">
    <ContentPage.Content>
        <controls:ControlLayout>
            <ScrollView VerticalOptions="FillAndExpand">
                <StackLayout>
                    <Image Source="fittersphotos.png" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                    <StackLayout HeightRequest="20"/>
                    <Label Text="You must take two photographs of the area before starting the work. And five photographs of the completed work." VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                    <StackLayout HeightRequest="20"/>
                </StackLayout>
            </ScrollView>

            <Button Text="Next" Clicked="OnClick" VerticalOptions="EndAndExpand" HorizontalOptions="EndAndExpand"/>
            
        </controls:ControlLayout>
    </ContentPage.Content>
</ContentPage>
