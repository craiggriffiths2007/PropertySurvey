<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MartControls.ViewSpecialGlassControl"
             LayoutChanged="layout_changed">
    <Label x:Name="the_label"/>
    <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
        <Label x:Name="the_text" TextColor="Black" HorizontalOptions="FillAndExpand" Margin="10"/>
        <Button Text="View" x:Name="view_button" IsVisible="False" Clicked="view_clicked"/>
    </StackLayout>
</StackLayout>