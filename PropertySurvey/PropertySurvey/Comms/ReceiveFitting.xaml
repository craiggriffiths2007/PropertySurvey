<?xml version="1.0" encoding="utf-8" ?>
<s:ReceiveShared xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PropertySurvey.ReceiveFitting"
             Title="Receive"
             xmlns:s="clr-namespace:PropertySurvey">
    <ContentPage.Content>
        <Grid>
            <StackLayout Margin="3">
                <Label Text="" IsVisible="False" x:Name="complete_label"/>
                <StackLayout HeightRequest="45"/>
                <ProgressBar x:Name="sending_progress"/>
            </StackLayout>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="60" WidthRequest="60">
                <ActivityIndicator x:Name="act_ind" Color="DodgerBlue" IsRunning="True" WidthRequest="60" HeightRequest="60"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</s:ReceiveShared>
